ARG ALPINE_VERSION=alpine:3.22@sha256:4b7ce07002c69e8f3d704a9c5d6fd3053be500b7f1c69fc0d80990c2ad8dd412
FROM ${ALPINE_VERSION} AS builder
WORKDIR /usr/src

ENV PHPIZE_DEPS="autoconf dpkg-dev dpkg file g++ gcc libc-dev make pkgconf re2c"

RUN apk add --no-cache \
    ${PHPIZE_DEPS} \
    bash \
    ca-certificates \
    curl \
    tar \
    xz

RUN apk add --no-cache \
    bison \
    coreutils \
    curl-dev \
    libxml2-dev \
    linux-headers \
    re2c \
    readline-dev \
    sqlite-dev

ARG PHP_VERSION
ENV PHP_URL="https://github.com/php/php-src/archive/refs/tags/php-${PHP_VERSION}.tar.gz"

ARG PHP_CONFIG_OPTS="--enable-debug --with-pear --with-zlib"
RUN echo "$PHP_URL" && curl -fsSL -o php.tar.gz "$PHP_URL" \
  && cd /usr/src \
  && mkdir php-src \
  && tar -xzf php.tar.gz -C php-src --strip-components=1 \
  && cd php-src \
  && ./buildconf --force \
  && ./configure ${PHP_CONFIG_OPTS} \
  && make -j $(nproc) \
  && make install
WORKDIR /usr/src/myapp
